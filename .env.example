# Configuration pour WebKlor

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/webklor
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/webklor

# JWT Secret pour l'authentification
JWT_SECRET=your-super-secret-jwt-key-here

# Configuration du serveur
PORT=3001
NODE_ENV=development

# Configuration email (pour la newsletter)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# URL de l'application
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_URL_PROD=https://your-domain.com/api

# Configuration de sécurité
CORS_ORIGIN=http://localhost:5173
CORS_ORIGIN_PROD=https://your-domain.com

# Clés API (si nécessaire)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
